{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node20",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
    // **Ne pas mettre `moduleResolution`**
  },
  "include": ["src/**/*"]
}
